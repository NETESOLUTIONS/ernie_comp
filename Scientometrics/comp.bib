	author = {Shu, Fei and Julien, Charles-Antoine and Zhang, Lin and Qiu, Junping and Zhang, Jing and Larivière, Vincent},
	month = feb,
	year = {2019},
	keywords = {Chinese Library Classification, Classification system of science, CSCD},
	pages = {202--225},
	file = {ScienceDirect Full Text PDF:/Users/george/Zotero/storage/8LBYJFKW/Shu et al. - 2019 - Comparing journal and paper level classifications .pdf:application/pdf;ScienceDirect Snapshot:/Users/george/Zotero/storage/HHRP2IDK/S1751157718303298.html:text/html}
}

