	author = {Small, H. and Sweeney, E.},
	month = mar,
	year = {1985},
	keywords = {Cluster Size, Early Experiment, Size Limit, Subject Matter, Variable Level},
	pages = {391--409}
}

@article{small_shoulders_2004,
